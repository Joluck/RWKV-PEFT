{
  "train_batch_size": $DS_BATCH,
  "train_micro_batch_size_per_gpu": $DS_MICRO_BATCH,
  "gradient_accumulation_steps": $DS_ACCUM,

  "zero_optimization": {
    "stage": $DS_ZERO,
    "allgather_partitions": true,
    "reduce_scatter": true,
    "overlap_comm": true,
    "contiguous_gradients": true,
    "offload_optimizer": {
      "device": "$DS_OFFLOAD"
    }
  },

  "fp16": {
    "enabled": $FP16
  },
  "bf16": {
    "enabled": $BF16
  },

  "optimizer": {
    "type": "$OPT_TYPE",
    "params": {
      "lr": $LR,
      "betas": [0.9, 0.95],
      "eps": 1e-8,
      "weight_decay": $WD,
      "adam_w_mode": true,
      "param_groups": []
    }
  },

  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": $LR,
      "warmup_num_steps": $WARMUP
    }
  }
}